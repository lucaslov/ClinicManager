@model ClinicManager.ViewModels.PatientsAppointmentsViewModel
@{
    ViewBag.Title = "Appointments";
}

<h2>@Model.Patient.FullName Appointments</h2>
<h3>@Html.ActionLink($"Add new appointment for {Model.Patient.FullName}", "New", "Appointment")</h3>
<ul>
    @foreach (var appointment in Model.Appointments)
    {
        <li>
            @Html.ActionLink("Details", "Details", "Appointment", new { id = appointment.Id }, null) |
            @appointment.Doctor.FullName |
            @appointment.Date.ToString() |
            @Html.ActionLink("Edit", "Edit", "Appointment", new { id = appointment.Id }, null) |
            @Html.ActionLink("Delete", "Delete", "Appointment", new { id = appointment.Id }, null)
        </li>
    }
</ul>

