@model ClinicManager.Models.Visit
@{
    ViewBag.Title = "Details";
}
@Html.ActionLink("All Visits", "Index", "Visit")
@Html.ActionLink($"{Model.Patient.FullName}'s visits", "Visits", "Patient", new {id = Model.Id}, null)
@Html.ActionLink($"{Model.Doctor.FullName}'s visits", "Visits", "Doctor", new { id = Model.DoctorId}, null)
<h2>Details</h2>
<ul>
    <li>Diagnosis: @Model.Diagnosis</li>
    <li>Prescription: @Model.Prescription</li>
    <li>Additional desription: @Model.AdditionalDescription</li>
    <li>Doctor: @Model.Doctor.FullName</li>
    <li>Patient: @Model.Patient.FullName</li>
    <li>Was appointed? @if (Model.AppointmentId == null)
    { @("No")}
    else { @("Yes")} </li>
    <li>Price: @Model.Cost</li>
</ul>
